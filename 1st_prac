python Main.py
export FLASK_APP=Main
flask run

Main.py
from flask import Flask
app=Flask(__name__)
@app.route('/')
def hello():
    return 'hello world'
if __name__=='  main  ':
    app.run(host='127.0.0.1',port=8080,debug=True)
    
    
app.yaml

runtime: python 
env: flex
entrypoint: gunicorn -b :$PORT main:app

runtime_config:
  python_version: 3
  
 
 
